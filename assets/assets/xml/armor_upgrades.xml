<?xml version="1.0" encoding="UTF-8"?>
<armorupgrades>
  <!-- Clarification
    <armorupgrade idname="(string)"> idname is used internally by the game to identify the armor type.
                                  No two item types should have the same idname.
        <name> (string) The name of the armor upgrade.
            Default: UNDEFINED
        <make_difficulty> (integer) Difficulty to add to armor. 0 means no added difficulty.
            Default: 0
        <make_price> (integer) Cost to add to armor.
            Default: 0
        <dodgepenalty> (integer) Penalty to dodge when wearing armor.
            Default: 0
        <restricted> (boolean) If armor cannot be added manually to clothing. It will only be usable if explicitly whitelisted or set as the default.
            Default: false
        <visible> (boolean) If armor is worn outside of clothing. If true, only clothes that allow visible armor can have it added.
            Default: false
        <armor>
            <body> (integer) Protection offered to the body.
                Default: 0
            <head> (integer) Protection offered to the head.
                Default: 0
            <limbs> (integer) Protection offered to arms and legs.
                Default: 0
            <fireprotection> (boolean) If armor reduces damage from fire.
                Default: false
        </armor>
    </armorupgrade>
    -->
  <armorupgrade idname="ARMOR_NONE">
    <name>No Armor</name>
    <description>Clothing with no armor value.</description>
    <make_difficulty>0</make_difficulty>
    <make_price>0</make_price>
